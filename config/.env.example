# TUBECRAFT Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
POSTGRES_USER=tubecraft
POSTGRES_PASSWORD=tubecraft2024
POSTGRES_DB=tubecraft_db

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=tubecraft2024

# Ollama Configuration
OLLAMA_MODEL=mistral:7b
OLLAMA_TIMEOUT=300

# Generator Settings
VIDEO_QUALITY=high
VIDEO_FPS=30
VIDEO_RESOLUTION=1920x1080
AUDIO_SAMPLE_RATE=44100
AUDIO_BITRATE=192k
MAX_CONCURRENT_JOBS=3

# TTS Settings
TTS_MODEL=ja_JP-takumi-medium
TTS_VOICE_SPEED=1.0
TTS_MAX_CHUNK_SIZE=1000

# Storage Paths
DATA_PATH=/data
BACKUP_PATH=/backup

# API Settings
API_SECRET_KEY=your-secret-key-here-change-in-production
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Settings
WORKER_THREADS=4
MEMORY_LIMIT_GB=8
CPU_LIMIT=4

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Optional: GPU Settings (uncomment if using GPU)
# CUDA_VISIBLE_DEVICES=0
# ENABLE_GPU=true

# Optional: External Services (Phase 2)
# YOUTUBE_API_KEY=
# YOUTUBE_CLIENT_ID=
# YOUTUBE_CLIENT_SECRET=
# DISCORD_WEBHOOK_URL=
# SLACK_WEBHOOK_URL=

# Optional: S3 Storage (Phase 2)
# S3_ENDPOINT=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET_NAME=
# S3_REGION=us-east-1